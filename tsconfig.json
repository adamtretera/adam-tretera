{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@/components/*":["components/*"],
        "@/lib/*": ["lib/*"],
        "@/styles/*": ["styles/*"],
        "@/utils/*": ["utils/*"],
        "@/locales/*": ["locales/*"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/blog/[slug].tsx", "pages/blog.tsx", "pages/index.js"],
  "exclude": ["node_modules"]
}
